{
  "name": "twitter-lang",
  "version": "0.0.0",
  "description": "A formal grammar defining tweet text",
  "author": "Cameron Hunter <hello@cameronhunter.co.uk>",
  "license": "MIT",
  "main": "build/twitter-lang.min.js",
  "scripts": {
    "build": "npm-run-all --parallel build:dev build:production",
    "build:dev": "rollup -c",
    "build:production": "NODE_ENV=production rollup -c",
    "build:conformance": "rm -rf test/conformance && babel-node bin/build-conformance",
    "pretest": "npm run build",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "js-yaml": "^3.6.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.7.0",
    "pegjs": "^0.9.0",
    "rollup": "^0.25.8",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-pegjs": "^2.0.0",
    "rollup-plugin-uglify": "^0.3.1"
  }
}
